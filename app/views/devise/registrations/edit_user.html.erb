<div class="authform">
  <h3>Edit User</h3>
  <%= form_for(@user, :url => update_user_path(params[:id]), :html => { :method => :patch, :role => 'form'}) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :role %>
      <%= f.collection_select(:role, @roles, :to_s, :to_s, class: 'form-control') %>
    </div>
    <%= f.submit 'Update', :class => 'button right' %>
  <% end %>
</div>
<div class="authform">
<h3>Delete User</h3>
<%= button_to "Delete User", delete_user_path(params[:id]), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'button right' %>
</div>
